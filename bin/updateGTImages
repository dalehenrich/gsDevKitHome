#! /bin/bash

#=========================================================================
# Copyright (c) 2014 GemTalk Systems, LLC <dhenrich@gemtalksystems.com>.
#
# Name - updateGTImages
#
# Purpose - Update the todeClient images for my gemtalk branch.
#
# Examples
#   updateGTImages -h
#   updateGTImages
#
#=========================================================================

# help function
function display_help() {
  echo ""
  echo "USAGE: $(basename $0) [-h] <stone-name>"
  echo "Update the todeClient images for my gemtalk branch."
  echo ""
  echo "OPTIONS"
  echo "  -h display help"
  echo ""
  echo "EXAMPLES"
  echo "  $(basename $0) -h"
  echo ""
}

while getopts "h" OPT ; do
  case "$OPT" in
    h) 
      display_help
      exit 1
      ;;
    *)
      display_help
      exit 1
      ;;
  esac
done

$GS_HOME/bin/updateTodeImage
if [[ $? != 0 ]] ; then exit 1; fi

$GS_HOME/bin/updateTodeImage -p _0
if [[ $? != 0 ]] ; then exit 1; fi

$GS_HOME/bin/updateTodeImage -p _1
if [[ $? != 0 ]] ; then exit 1; fi

$GS_HOME/bin/updateTodeImage -p _2
if [[ $? != 0 ]] ; then exit 1; fi

$GS_HOME/bin/updateTodeImage -p _small
if [[ $? != 0 ]] ; then exit 1; fi

exit 0
