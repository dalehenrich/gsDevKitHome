#=========================================================================

usage() {
  cat <<HELP
USAGE: $(basename $0) [-h] <stone-name> <gemstone-version>
Create a new stone with the given stone name. Do not install tODE.

OPTIONS
  -h display help

EXAMPLES
  $(basename $0) -h
  $(basename $0) kit 3.2.1

HELP
}

set -e # exit on error
if [ "${GS_HOME}x" = "x" ] ; then
  echo "the GS_HOME environment variable needs to be defined"; exit 1
fi
source ${GS_HOME}/bin/shFunctions

if [ $# -ne 2 ]; then
  usage; exit 1
fi
stoneName="$1"
gsvers="$2"

if [ ! -e "$GS_HOME/pharo/pharo" ]; then
  $GS_HOME/bin/installPharo
fi

echo "Creating stone $stoneName"
pharo=$GS_HOME/pharo
$pharo/pharo $pharo/todeClient.image createStone $stoneName $gsvers

if [ "${GS_TRAVIS}x" != "x" ] ; then
  # running on travis server - have to use a custome key file
  chmod +w  $GS_HOME/gemstone/stones/$stoneName/product/seaside/etc/gemstone.key
  cp $GS_HOME/travis/GemStone64Bit${gsvers}-x86_64.Linux.key $GS_HOME/gemstone/stones/$stoneName/product/seaside/etc/gemstone.key
fi

